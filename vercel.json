{
  "cleanUrls": true,
  "github": {
    "enabled": false
  },
  "functions": {
    "api/*": {
      "includeFiles": "data/*.json"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "stale-while-revalidate=86400"
        },
        {
          "key": "Content-Type",
          "value": "application/json; charset=utf-8"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Accept, Accept-Language, Content-Language, Content-Type"
        }
      ]
    },
    {
      "source": "/api/graphql",
      "headers": [
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST"
        }
      ]
    },
    {
      "source": "/api/status",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ]
}
